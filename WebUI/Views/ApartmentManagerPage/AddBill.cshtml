
@{
    ViewBag.Title = "Apartment Manager Page";
    Layout = "~/Views/Shared/_ApartmentManagerLayout.cshtml";
}
@model BillAddViewDto


@using (Html.BeginForm())
{
    <div class="container">
        <div>
            <div class="col-4">
                <div class="form-group">
                    <label>Block Adi</label>
                    @Html.DropDownListFor(x => x.BlockId, new SelectList(ViewBag.Block, "Id", "BlockName"), new { @class = "form-control" })
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label>Daire Numarasi</label>
                    @Html.DropDownListFor(x => x.ApartmentId, new SelectList(ViewBag.Apartment, "Id", "ApartmentNumber"), new { @class = "form-control" })
                </div>
            </div>

            <div class="col-4">
                <div class="form-group">
                    <label>Borc Tipi</label>
                    @Html.DropDownListFor(x => x.DebtTypeId, new SelectList(ViewBag.DebtType, "Id", "Name"), new { @class = "form-control" })
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label>Kullanici</label>
                    @Html.DropDownListFor(x => x.OwnerId, new SelectList(ViewBag.User, "Id", "Name"), new { @class = "form-control" })
                </div>
            </div>
            <div class="col-4">
                <input type="text" value="" name="Amount" placeholder="Tutar" /> <br /><br />
                <input type="date" value="" name="BillDate" placeholder="Fatura Tarihi" /> <br /><br />
                <input type="submit" value="Fatura Ekle" />
            </div>
           
        </div>
    </div>
    
}
